<UserControl x:Class="SchoolQuestions.OpenQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SchoolQuestions"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="question" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" />
        <TextBox x:Name="answer" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Background="Gray" Foreground="Wheat" FontSize="18" />
        <Button Content="Pokračovat" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="3" Padding="5" Click="Button_Click" />

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
    </Grid>
</UserControl>