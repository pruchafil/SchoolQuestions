<Window x:Class="SchoolQuestions.Questions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolQuestions"
        mc:Ignorable="d"
        Title="Questions" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">
    <Grid x:Name="gr">

        <Label x:Name="time" HorizontalAlignment="Center" FontSize="15" Content="Test začíná!" />
        <Label x:Name="remaining" HorizontalAlignment="Left" FontSize="12" Content="Zbývá otázek: " />

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
    </Grid>
</Window>